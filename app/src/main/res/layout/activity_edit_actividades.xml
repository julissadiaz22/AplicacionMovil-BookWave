<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EditActividadesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Editar Actividad"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Campo ID de la Actividad -->
            <EditText
                android:id="@+id/txtID"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/custom_editext"
                android:hint="ID"
                android:inputType="text"
                android:paddingStart="15dp"
                android:layout_marginBottom="12dp"
                android:enabled="false" /> <!-- Campo ID solo lectura -->

            <!-- Campo Nombre de la Actividad -->
            <EditText
                android:id="@+id/txtNombreActividad"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/custom_editext"
                android:hint="Nombre de la Actividad"
                android:inputType="text"
                android:paddingStart="15dp" />

            <!-- Campo Lugar -->
            <EditText
                android:id="@+id/txtLugar"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_editext"
                android:hint="Lugar"
                android:inputType="text"
                android:paddingStart="15dp" />

            <!-- Contenedor para los campos de Fecha (dos columnas) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Campo Fecha Inicio -->
                <EditText
                    android:id="@+id/txtFechaInicio"
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_editext"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Fecha Inicio"
                    android:paddingStart="15dp" />

                <!-- Campo Fecha Fin -->
                <EditText
                    android:id="@+id/txtFechaFin"
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_editext"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Fecha Fin"
                    android:paddingStart="15dp" />
            </LinearLayout>

            <!-- Contenedor para los campos de Hora (dos columnas) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText

                    android:id="@+id/txtHoraInicio"
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_editext"
                    android:hint="Hora Inicio"
                    android:inputType="time"
                    android:paddingStart="15dp" />


                <EditText
                    android:id="@+id/txtHoraFin"
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_editext"
                    android:hint="Hora Fin"
                    android:inputType="time"
                    android:paddingStart="15dp" />
            </LinearLayout>

            <!-- Campo Descripci칩n -->
            <EditText
                android:id="@+id/txtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_editext"
                android:hint="Descripci칩n"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:paddingStart="15dp" />

            <!-- Campo Cupo M치ximo -->
            <EditText
                android:id="@+id/txtCupoMaximo"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_editext"
                android:hint="Cupo M치ximo"
                android:inputType="number"
                android:paddingStart="15dp" />

            <!-- Botones Agregar y Limpiar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAgregarActividad"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#093C66"
                    android:text="Actualizar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:cornerRadius="15dp" />

                <Button
                    android:id="@+id/btnRegresar"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:text="Regresar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:cornerRadius="15dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>